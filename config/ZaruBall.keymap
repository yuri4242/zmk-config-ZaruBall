        base_layer {
            display-name = "Base";
            sensor-bindings = <&scroll_down_up>;
            bindings = <
&kp TILDE         &kp N1  &kp N2      &kp N3        &kp N4        &kp N5                    &kp NUMBER_6  &kp N7    &kp N8  &kp N9    &kp N0    &kp BACKSLASH
&kp TAB           &kp Q   &kp W       &kp E         &kp R         &kp T                     &kp Y         &kp U     &kp I   &kp O     &kp P     &kp RETURN
&kp ESCAPE        &kp A   &kp S       &kp D         &kp F         &kp G        &kp HOME     &kp LBKT      &kp H     &kp J   &kp K     &kp L     &kp SEMI       &kp SQT
&kp LSHFT         &kp Z   &kp X       &kp C         &kp V         &kp B        &kp END      &kp RBKT      &kp N     &kp M   &mkp MB1  &mkp MB2  &kp FSLH       &kp PRINTSCREEN
&kp LEFT_CONTROL          &kp C_MUTE  &kp LEFT_ALT  &kp LEFT_GUI  &lt 2 MINUS  &lt 1 EQUAL  &kp SPACE     &kp BSPC                              &kp RIGHT_GUI
            >;
